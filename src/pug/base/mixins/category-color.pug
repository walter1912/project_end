mixin categoryColor(src, title, categoryColor)
  .category__list.border-bottom.mt-4.shadow-sm
    p.category__list__item.p-3.text-dark.border.border-bottom-0.m-0.d-flex.align-items-center
      img.category__list__icon.pe-2(src=src alt=`list`)
      span.fw-bold.text-uppercase= title
    each category in categoryColor
      p.category__color.p-3.text-dark.border.border-bottom-0.m-0.d-flex.align-items-center
        a.p-3.rounded.me-3(style={ background: `${category.color}`})
        span= category.title
