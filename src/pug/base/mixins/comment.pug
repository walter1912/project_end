mixin comment(comment)
  .comment.container.p-0.px-1.d-flex.mt-5
    .border.p-1.d-sm-block.d-none
      img.comment__image.w-100(src="../../../assets/images/png/author.png" alt="" srcset="")
    .ms-4.w-100.d-flex.justify-content-between.flex-column
      .fs-4.fw-bold.text-uppercase= comment.author
      .d-flex.justify-content-sm-between.justify-content-center.flex-sm-row.flex-column
        p.fst-italic.fw-light= comment.date
        .mb-2.text-warning.fst-italic(href="#") Trả lời
      p.comment__content.fst-italic= comment.content
