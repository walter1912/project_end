mixin headerButtonLink(href, alt, iconPath)
  .header__button.header__button__icon.p-2
    a(href=href)
      img(src=iconPath, alt=alt)

mixin navItemLink(href, text)
  li.nav-item.nav__list
    a.nav-link.link-light.text-light.p-4.text-uppercase(href=href)= text


